---
const { data } = Astro.props;
---

<section class="container">
    <div class="row">
        {data.map((item, index) => (
                <div
                    class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mx-auto mb-3"
                    data-aos="fade-up"
                    data-aos-delay={index * 100}
                >
                    <div class="card-colored text-white text-center p-4 rounded-4 h-100 w-100 justify-content-center">
                        {item.icon && (
                            <div class="icon-circle mx-auto mb-3">
                                <i class={"bi bi-" + item.icon.type}></i>
                            </div>
                        )}

                        <h3 class="fw-bold fs-4">{item.title}</h3>

                        <p class="text-light">{item.description}</p>
                    </div>
                </div>
        ))}
    </div>
</section>

<script>
    import AOS from "aos";

    AOS.init();
</script>

<style>
    .card-colored {
        background: linear-gradient(135deg, #ff7f32, #ffb347);
        transition: transform 0.3s ease, box-shadow 0.3s ease, filter 0.3s ease;
    }

    .card-colored:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        filter: brightness(1.06);
    }

    .icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        background: rgba(255, 255, 255, 0.25);
    }
</style>
